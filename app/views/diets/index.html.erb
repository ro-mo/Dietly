<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Diets" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Diets</h1>
    <%= link_to "New diet", new_diet_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="diets" class="min-w-full">
    <% @diets.each do |diet| %>
      <%= render diet %>
      <p>
        <%= link_to "Show this diet", diet, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
